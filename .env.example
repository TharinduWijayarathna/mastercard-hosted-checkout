# Mastercard Gateway Configuration
# Copy this file to .env and fill in your actual credentials

# Gateway Environment (test or production)
GATEWAY_ENVIRONMENT=test

# Merchant Credentials
MERCHANT_ID=your_merchant_id
API_PASSWORD=your_api_password

# Gateway URLs
# Test Gateway URL
GATEWAY_URL_TEST=https://test-bankofceylon.mtf.gateway.mastercard.com

# Production Gateway URL (update with your actual production URL)
GATEWAY_URL_PROD=https://bankofceylon.gateway.mastercard.com

# API Version
API_VERSION=100

# Application Settings
CURRENCY=LKR
MERCHANT_NAME=Your Merchant Name

# Webhook Settings (optional)
WEBHOOK_SECRET=your_webhook_secret
